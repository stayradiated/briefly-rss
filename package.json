{
  "name": "@stayradiated/briefly-rss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "ncc build --out ./bin ./src/index.ts",
    "tidy": "xo --fix",
    "test": "ava",
    "codegen": "gql-gen --config graphql.codegen.js"
  },
  "author": {
    "name": "George Czabania"
  },
  "license": "ISC",
  "dependencies": {
    "@sinclair/typebox": "0.24.20",
    "date-fns": "2.29.1",
    "env-schema": "5.0.0",
    "fastify": "4.3.0",
    "got": "12.1.0",
    "graphql": "16.5.0",
    "graphql-request": "4.3.0",
    "graphql-tag": "2.12.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.9.1",
    "@graphql-codegen/introspection": "2.2.0",
    "@graphql-codegen/typescript": "2.7.2",
    "@graphql-codegen/typescript-graphql-request": "4.5.2",
    "@graphql-codegen/typescript-operations": "2.5.2",
    "@vercel/ncc": "0.34.0",
    "ava": "4.3.1",
    "del-cli": "5.0.0",
    "typescript": "4.7.4",
    "xo": "0.51.0"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
